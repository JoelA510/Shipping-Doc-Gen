# Service Configuration
PORT=3001
NODE_ENV=production
FRONTEND_URL=http://localhost:5173

# Authentication (Required)
AUTH_SECRET=CHANGE_THIS_IN_PRODUCTION_use_32_char_random_string

# Storage Configuration
# Options: local, s3
STORAGE_PROVIDER=local
STORAGE_PATH=./storage

# AWS S3 Configuration (Required if STORAGE_PROVIDER=s3)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET_NAME=
# S3_ENDPOINT=
# S3_PUBLIC_URL=

# Database / Cache
# Redis is used for job queues and caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Carrier Integrations
FEDEX_API_URL=https://apis-sandbox.fedex.com
UPS_API_URL=https://wwwcie.ups.com/api

# OCR Microservice (Optional)
OCR_SERVICE_URL=http://localhost:3002
OCR_ENABLED=true

# Frontend Configuration (VITE_*)
# These are exposed to the browser
VITE_API_URL=http://localhost:3001
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
